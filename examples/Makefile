###############################################################################
#
#                          Makefile for VATA examples
#
###############################################################################

CC=clang
CFLAGS=-emit-llvm -S -c

###############################################################################

.PHONY: all clean

all: $(patsubst %.c,%.ll,$(wildcard *.c))

%.ll: %.c
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf $(patsubst %.c,%.ll,$(wildcard *.c))
